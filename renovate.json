{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    "local>hmcts/.github:renovate-config"
  ],
  "enabledManagers": [
    "helm-requirements",
    "gradle-wrapper",
    "gradle",
    "terraform"
  ],
  "prConcurrentLimit": 6,
  "prHourlyLimit": 3,
  "labels": [
    "dependencies"
  ],
  "helm-requirements": {
    "fileMatch": [
      "\\Chart.yaml$"
    ],
    "aliases": {
      "hmctspublic": "https://hmctspublic.azurecr.io/helm/v1/repo/"
    }
  },
  "separateMajorMinor": false,
  "packageRules": [
    {
      "matchPackageNames": [
        "redis"
      ],
      "allowedVersions": "<=3"
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  }
}
